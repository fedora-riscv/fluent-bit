+  CFLAGS=-std=gnu99\ -Wall\ -pipe\ -g3\ -O3\ -funroll-loops\ -fPIC
   BUILD_COMMAND $(MAKE) CC=${DEPS_C_COMPILER}
   INSTALL_COMMAND $(MAKE) DESTDIR= install)
